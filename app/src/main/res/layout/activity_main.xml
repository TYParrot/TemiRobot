<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/imageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 생성 버튼"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/> <!-- 위쪽에서의 위치 조정 -->

    <Button
        android:id="@+id/alarmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 생성 버튼"
        app:layout_constraintTop_toBottomOf="@+id/imageBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"/> <!-- 첫 번째 버튼 아래 위치 조정 -->

    <Button
        android:id="@+id/sleepBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수면 버튼"
        app:layout_constraintTop_toBottomOf="@+id/alarmBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"/> <!-- 두 번째 버튼 아래 위치 조정 -->

</androidx.constraintlayout.widget.ConstraintLayout>
