<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Back Button -->
        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- User Management Section -->
        <LinearLayout
            android:id="@+id/user_management_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/user_management_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 관리"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Example of a saved user entry -->
            <LinearLayout
                android:id="@+id/saved_user_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/saved_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="저장된 이름" />

                <ToggleButton
                    android:id="@+id/saved_user_sound_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="효과음 1"
                    android:textOff="효과음 1" />

                <Button
                    android:id="@+id/delete_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제" />
            </LinearLayout>

            <!-- New user entry -->
            <LinearLayout
                android:id="@+id/new_user_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="이름 입력" />

                <ToggleButton
                    android:id="@+id/sound_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="효과음 선택"
                    android:textOff="효과음 선택" />

                <Button
                    android:id="@+id/add_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가" />
            </LinearLayout>
        </LinearLayout>

        <!-- Image Settings Section -->
        <LinearLayout
            android:id="@+id/image_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/image_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지 설정"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- List of saved images -->
            <ListView
                android:id="@+id/imageListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="8dp" />

            <!-- New image entry -->
            <LinearLayout
                android:id="@+id/new_image_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ToggleButton
                    android:id="@+id/name_select_toggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOn="이름 선택"
                    android:textOff="이름 선택" />

                <Button
                    android:id="@+id/select_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />

                <Button
                    android:id="@+id/add_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가" />
            </LinearLayout>
        </LinearLayout>

        <!-- Alarm Settings Section -->
        <LinearLayout
            android:id="@+id/alarm_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/alarm_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알람 설정"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/alarm_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="시간 선택"
                android:textOff="시간 선택" />

            <TextView
                android:id="@+id/alarm_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="시간마다 랜덤으로 이미지가 보여집니다." />

            <LinearLayout
                android:id="@+id/dnd_time_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/dnd_time_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="방해금지 시간 설정" />

                <Button
                    android:id="@+id/set_dnd_time_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 선택" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
